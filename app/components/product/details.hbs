<div class='product-details'>
  <section>
    <h3>{{@name}}</h3>
    <div></div>
    <p class='text-warning'><i class='fas fa-star'>
      </i>
      <i class='fa fa-star'>
      </i>
      <i class='fa fa-star'>
      </i>
      <i class='fa fa-star'>
      </i>
    </p>
  </section>

  <section class={{unless @isDetails 'h4'}}>
    <del class='small text-black-50'>{{currency @price.original sign='$'}}
    </del>
    <i class='text-danger font-weight-bold'>{{currency @price.current sign='$'}}
    </i>
  </section>

  {{#if @isDetails}}
    <div class='d-flex justify-content-between align-items-end'>
      <div>
        <h5>Color</h5>
        <div class='active-{{@color}}'>
          {{#each @colors as |colorInfo|}}
            <span
              class='product-color {{concat "color-" colorInfo.color}}'
              {{on 'click' (fn @onChangeColor colorInfo.color)}}
            ></span>{{/each}}
        </div>
      </div>
      <button class='btn btn-info' type='button' {{on 'click' this.addToCart}}>
        <i class='fa fa-shopping-cart mr-1'></i>
        Add to cart
      </button>
    </div>
  {{/if}}

</div>