<GeneralContainer>
  <div class='product {{if this.isZoomed "is-zoomed"}}'>
    <Product::Image
      @src={{this.productImage}}
      @toggleZoom={{this.toggleZoom}}
    />
    <Product::Details
      @isDetails={{true}}
      @name={{this.model.name}}
      @price={{this.model.price}}
      @color={{this.color}}
      @colors={{this.model.colors}}
      @onChangeColor={{this.onChangeColor}}
    />
  </div>
  <h5 class='mt-5'>Features</h5>
  <ul>{{#each this.model.features as |feature|}}
      <li>
        {{feature}}
      </li>{{/each}}</ul>
</GeneralContainer>